#!/bin/sh
#set -x
unset bg
j=$(basename $0)
if [ $j = lxt ];then
  size=88x54
  font="-misc-fixed-medium-r-normal-*-20-*-*-*-*-*-iso10646-*"
elif [ $j = dxt ];then
  size=88x98
  [ $UID -eq 0 ] && bg=40/10/40 || bg=00/08/40
  font="-misc-fixed-medium-r-normal-*-14-*-*-*-*-*-iso10646-*"
else
  size=88x72
  font="-misc-fixed-medium-r-normal-*-13-*-*-*-*-*-iso10646-*"
fi
[ -n "$bg" ] || { [ $UID -eq 0 ] && bg=60/00/00 || bg=00/00/00; }
if [ "$1" = -cd ];then
  shift
  if [ -z "$1" ];then
    cd
  else
    if [ -d "$1" ];then
      cd "$1"
      shift
    else
      echo "Not a directory. $1" >&2
      exit 1
    fi
  fi
fi
if [ -z "$1" ];then
  i=$size
else
  if [ "$1" = "-" ];then
    i=$size
  else
    i=$1
  fi
  shift
fi
SHLVL=0 xterm -bg rgb:$bg -fg white -font $font -geometry $i -ls -rw -sb -sl 2000 "$@" &
